<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Performance Tier -->
            <include
                android:id="@+id/performanceTierComponent"
                layout="@layout/component_performance_tier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- XP Gain Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XP EARNED"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.8"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/xpEarnedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="+0 XP"
                        android:textSize="56sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        tools:text="+125 XP" />

                    <!-- XP Breakdown -->
                    <LinearLayout
                        android:id="@+id/xpBreakdownLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:divider="@android:drawable/divider_horizontal_bright"
                        android:showDividers="middle">

                        <LinearLayout
                            android:id="@+id/baseXpRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Correct Answers"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/baseXpValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0 XP"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                tools:text="+80 XP" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/speedBonusRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="⚡ Speed Bonus"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/speedBonusValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0 XP"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                tools:text="+25 XP" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/perfectScoreRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="💯 Perfect Score"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/perfectScoreValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+20 XP"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Level Up Notification -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/levelUpCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFD700"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎉"
                        android:textSize="64sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="LEVEL UP!"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/newLevelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="You reached Level 1"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:alpha="0.8"
                        tools:text="You reached Level 15!" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- New Badges -->
            <LinearLayout
                android:id="@+id/newBadgesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏆 NEW BADGES UNLOCKED!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newBadgesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_badge" />

            </LinearLayout>

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Continue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp" />

            <!-- Share Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Share Results"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:icon="@android:drawable/ic_menu_share" />

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
