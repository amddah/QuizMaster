<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.quizmaster">

    <!-- Internet permission for API access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- Login Activity (Launcher) -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication.NoActionBar" />

        <!-- Student Dashboard -->
        <activity
            android:name=".ui.student.StudentDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Professor Dashboard -->
        <activity
            android:name=".ui.professor.ProfessorDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Quiz Creation Activity -->
        <activity
            android:name=".ui.quiz.QuizCreationActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Quiz Activity (Enhanced) -->
        <activity
            android:name=".ui.QuizActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApplication" />

        <!-- Results Activity (Enhanced) -->
        <activity
            android:name=".ui.ResultsActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Leaderboard Activity -->
        <activity
            android:name=".ui.leaderboard.LeaderboardActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Professor Approval Activity -->
        <activity
            android:name=".ui.professor.ApprovalActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Profile Activity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- History Activity -->
        <activity
            android:name=".ui.HistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Main Activity (Legacy) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

    </application>

</manifest>